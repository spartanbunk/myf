# Production Environment Configuration for Mark Your Fish
NODE_ENV=production
PORT=3001

# Database Configuration
DATABASE_URL=postgresql://myf_user:myf_password@postgres:5432/markyourfish
DB_HOST=postgres
DB_PORT=5432
DB_NAME=markyourfish
DB_USER=myf_user
DB_PASSWORD=myf_password

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# JWT Configuration - CHANGE THESE IN PRODUCTION
JWT_SECRET=production_jwt_secret_change_this_to_secure_random_string
JWT_REFRESH_SECRET=production_refresh_secret_change_this_to_secure_random_string
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Client URLs
CLIENT_URL=https://markyourfish.com
CORS_ORIGINS=https://markyourfish.com,https://www.markyourfish.com

# AWS S3 Configuration (for file uploads)
AWS_ACCESS_KEY_ID=your_production_aws_access_key
AWS_SECRET_ACCESS_KEY=your_production_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=markyourfish-uploads

# Stripe Configuration
STRIPE_SECRET_KEY=sk_live_your_production_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_production_webhook_secret

# Email Configuration (SendGrid/SES)
EMAIL_FROM=noreply@markyourfish.com
EMAIL_API_KEY=your_production_email_api_key

# Weather API Configuration
WEATHER_API_KEY=your_production_weather_api_key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=/app/logs/app.log

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PASSWORD_RESET=true

# Session Configuration
SESSION_SECRET=production_session_secret_change_this_to_secure_random_string
COOKIE_SECURE=true
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=strict